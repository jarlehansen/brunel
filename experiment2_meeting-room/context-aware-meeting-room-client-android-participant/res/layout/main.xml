<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/titleText" android:text="@string/titleText" android:textStyle="bold" android:layout_centerHorizontal="true" android:keepScreenOn="true" android:layout_marginBottom="20px" android:gravity="center_horizontal" android:textSize="20px" android:paddingTop="15px"></TextView>







<Button android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:text="Exit" android:id="@+id/exitButton" android:paddingBottom="5px" android:paddingTop="5px" android:textSize="20px" android:layout_height="70dp"></Button>

<Button android:layout_centerHorizontal="true" android:layout_width="fill_parent" android:id="@+id/serverConfigButton" android:layout_above="@+id/exitButton" android:paddingBottom="5px" android:paddingTop="5px" android:textSize="20px" android:layout_height="70dp" android:text="Configuration"></Button>
<Button android:layout_centerHorizontal="true" android:layout_width="fill_parent" android:id="@+id/presentationButton" android:text="Presentation" android:layout_above="@+id/serverConfigButton" android:paddingBottom="5px" android:paddingTop="5px" android:textSize="20px" android:layout_height="70dp"></Button>

</RelativeLayout>
